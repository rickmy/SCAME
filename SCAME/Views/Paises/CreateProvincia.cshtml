
@model SCAME.Models.Provincia
@{
    ViewData["Title"] = "Provincia";
    var idPais = ViewBag.PaisId;
}

<h1>Crear Provincia</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateProvincias">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PaisId" class="form-control" value=@idPais>
            <div class="form-group">
                <label asp-for="NombreProvincia" class="control-label"></label>
                <input asp-for="NombreProvincia" class="form-control" />
                <span asp-validation-for="NombreProvincia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Paises" asp-action="Index">Regresar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
