@model SCAME.Models.HorasAtencion

@{
    ViewData["Title"] = "Create";
}
<br>
<br>
<h1 class="text-center font-weight-bold">Agregar</h1>

<h4 class="text-center font-weight-bold">HorasAtencion</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
