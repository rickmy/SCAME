@model IEnumerable<SCAME.Models.Paciente>

@{
    ViewData["Title"] = "Pacientes";
}

<h1>Administrador de Pacientes</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimerNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegundoNombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrimerApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SegundoApellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PruebaCovid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CasoConfirmado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discapacidad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroCarnet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Porcentaje)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Canton)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sexo)
            </th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Cedula)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimerNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SegundoNombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PrimerApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SegundoApellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a class="icon-sli-docs" href="@("/PdfPac/" + item.PruebaCovid)"> Prueba</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CasoConfirmado)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discapacidad.NombreDiscapacidad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroCarnet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Porcentaje)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Canton.NombreCanton)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sexo.NombreSexo)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdPaciente">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdPaciente">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
