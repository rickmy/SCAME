@model SCAME.Models.Cita

@{
    ViewData["Title"] = "Details";
}
<br />
<section id="hero" class="d-flex align-items-center">
    <div class="container">
        <h1>Detalle de la Cita</h1>
        <h2>
            <br />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Paciente)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Paciente.PrimerNombre) @Html.DisplayFor(model => model.Paciente.PrimerApellido)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.FechaCita)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.FechaCita)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MedicoId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Medico.Nombre) @Html.DisplayFor(model => model.Medico.Apellido)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.MotivoCita)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.MotivoCita)
                </dd>                
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Especialidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Especialidad.NombreEspecialidad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ConsultorioId)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Consultorio.NombreConsultorio)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.HorasAtencion)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.HorasAtencion.HoraInicio) - @Html.DisplayFor(model => model.HorasAtencion.HoraCierre)
                </dd>
            </dl>
            <a asp-action="Index" class="btn-get-started scrollto">Regresar</a>
    </div>
    </h2>
    </div>
</section>