@model SCAME.Models.MedicoDetalle

@{
    ViewData["Title"] = "Detalles";
}
<br />
<section id="hero" class="d-flex align-items-center">
    <div class="container">
        <h1>Detalle de la configuración del Médico</h1>
        <h2>
            <br />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Medico)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Medico.Nombre) @Html.DisplayFor(model => model.Medico.Apellido)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Especialidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Especialidad.NombreEspecialidad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.PrecioEspecialidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.PrecioEspecialidad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.DescripcionEspecialidad)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DescripcionEspecialidad)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Turno)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Turno.NombreTurno)
                </dd>
            </dl>
            <a asp-action="Edit" asp-route-id="@Model.IdMedicoDetalle" class="btn-get-started scrollto">Editar</a>
            <a asp-action="Index" class="btn-get-started scrollto">Regresar</a>

        </h2>
    </div>
</section>
