@model SCAME.Models.Turno

@{
    ViewData["Title"] = "Delete";
}

<h1>Eliminar</h1>

<h3>Al eliminar este registro sera de froma permanente.</h3>
<div>
    <h4>Turno</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NombreTurno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NombreTurno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DiasTurno)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DiasTurno)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraInicio)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraInicio)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HoraSalida)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.HoraSalida)
